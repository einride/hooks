{
  "name": "@einride/hooks",
  "version": "0.0.0-development",
  "description": "Reusable React hooks",
  "main": "./dist/cjs/main.js",
  "module": "./dist/esm/main.js",
  "exports": {
    ".": {
      "import": "./dist/esm/main.js",
      "require": "./dist/cjs/main.js"
    }
  },
  "scripts": {
    "build": "rollup --config",
    "commitlint": "commitlint --from origin/main --to HEAD",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "eslint --ext .ts .",
    "review": "yarn install --frozen-lockfile && concurrently --kill-others-on-fail 'yarn commitlint' 'yarn format-check' 'yarn lint' 'yarn test --run' 'yarn build'",
    "test": "vitest"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@einride/eslint-plugin": "6.8.0",
    "@einride/prettier-config": "2.0.0",
    "@einride/tsconfig": "1.0.0",
    "@rollup/plugin-typescript": "8.4.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@types/react": "18.0.18",
    "@types/react-dom": "18.0.6",
    "@vitejs/plugin-react": "2.0.1",
    "concurrently": "7.3.0",
    "eslint": "8.23.0",
    "jsdom": "20.0.0",
    "prettier": "2.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rollup": "2.79.0",
    "semantic-release": "19.0.5",
    "typescript": "4.8.2",
    "vite": "3.1.0",
    "vitest": "0.23.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/einride/hooks.git"
  },
  "keywords": [
    "react",
    "hooks"
  ],
  "author": "Filip Tammerg√•rd",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/einride/hooks/issues"
  },
  "homepage": "https://github.com/einride/hooks#readme"
}
