{
  "name": "@einride/hooks",
  "version": "0.0.0-development",
  "description": "Reusable React hooks",
  "scripts": {
    "build": "vite build",
    "commitlint": "commitlint --from origin/main --to HEAD",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "eslint --ext .ts .",
    "review": "yarn install --frozen-lockfile && concurrently --kill-others-on-fail 'yarn commitlint' 'yarn format-check' 'yarn lint' 'yarn test --run' 'yarn build'",
    "test": "vitest"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.1",
    "@commitlint/config-conventional": "17.4.0",
    "@einride/eslint-plugin": "6.17.0",
    "@einride/prettier-config": "2.0.0",
    "@einride/tsconfig": "1.0.1",
    "@rollup/plugin-typescript": "11.0.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "@vitejs/plugin-react": "3.0.1",
    "concurrently": "7.6.0",
    "eslint": "8.31.0",
    "jsdom": "21.0.0",
    "prettier": "2.8.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "semantic-release": "20.0.2",
    "typescript": "4.9.4",
    "vite": "4.0.4",
    "vitest": "0.27.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/hooks.cjs",
  "module": "./dist/hooks.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/hooks.js",
      "require": "./dist/hooks.cjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/einride/hooks.git"
  },
  "keywords": [
    "react",
    "hooks"
  ],
  "author": "Filip Tammerg√•rd",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/einride/hooks/issues"
  },
  "homepage": "https://github.com/einride/hooks#readme"
}
