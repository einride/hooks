    "@testing-library/react": "13.3.0",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@vitejs/plugin-react": "2.0.0",
    "concurrently": "7.2.2",
    "eslint": "8.19.0",
    "jsdom": "20.0.0",
    "prettier": "2.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "semantic-release": "19.0.3",
    "typescript": "4.7.4",
    "vite": "3.0.0",
